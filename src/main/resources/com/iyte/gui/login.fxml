<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="12" alignment="CENTER"
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.iyte.gui.LoginController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <Label text="Ticket Reservation System" style="-fx-font-size: 20px;" />

    <HBox spacing="6">
        <Label text="Username:" />
        <TextField fx:id="txtUser" promptText="enter name" />
    </HBox>

    <HBox spacing="6">
        <Label text="Role:" />
        <ComboBox fx:id="cmbRole" />
    </HBox>

    <Button text="Login" onAction="#handleLogin" maxWidth="Infinity" />
</VBox>