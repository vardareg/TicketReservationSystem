<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.iyte.gui.FirmEventController"
    hgap="10" vgap="10">

    <!-- nice uniform padding -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <!-- form rows -->
    <Label text="Event Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <Label text="Date:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <DatePicker fx:id="datePicker" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Label text="Location:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="locationField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <Label text="Type:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField fx:id="typeField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    <Label text="Category Name:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <TextField fx:id="catNameField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

    <Label text="Price:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
    <TextField fx:id="priceField" GridPane.rowIndex="5" GridPane.columnIndex="1" />

    <Label text="Capacity:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
    <TextField fx:id="capField" GridPane.rowIndex="6" GridPane.columnIndex="1" />

    <!-- buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT"
        GridPane.rowIndex="7" GridPane.columnIndex="1">
        <Button text="Save" onAction="#save" />
        <Button text="Cancel" onAction="#close" />
    </HBox>
</GridPane>