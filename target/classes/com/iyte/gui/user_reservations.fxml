<?xml version="1.0" encoding="UTF-8"?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.iyte.gui.UserReservationsController"
    spacing="15" alignment="CENTER" padding="20">

    <Label text="My Reservations" style="-fx-font-size: 20px;" />

    <TableView fx:id="reservationTable" prefWidth="500">
        <columns>
            <TableColumn fx:id="eventNameColumn" text="Event" />
            <TableColumn fx:id="categoryColumn" text="Category" />
            <TableColumn fx:id="quantityColumn" text="Quantity" />
            <TableColumn fx:id="idColumn" text="Res. ID" />
        </columns>
    </TableView>

    <Button text="Back" onAction="#handleBack" />
</VBox>